#:kivy 1.11

<SnakeHead>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeTail>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
<Fruit>
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './images/apple.png'

<SnakeGame>:
    snake_head: head_id
    fruit: fruit_id

    SnakeHead:
        id : head_id
        size: self.size
    Fruit:
        id : fruit_id
        size: self.size
    Label:
        font_size: 50
        center_x: root.width / 2
        top: root.top - 50
        text: str(root.score)

